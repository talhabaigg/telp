{
    "version": "1.0.0",

    "type": "project",

    "license": "proprietary",

    "require": {

        "php": "^8.2",
        "laravel/framework": "^11.9",
        "laravel/octane": "^2.5"
    },

    "require-dev": {

        "laravel/pint": "^1.13",

        "phpunit/phpunit": "^11.0.1",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",

        "laravel/tinker": "^2.9",
        "nunomaduro/collision": "^8.1"
    },

    "autoload": {

        "psr-4": {

            "Src\\": "src/",
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },

    "autoload-dev": {

        "psr-4": {

            "Tests\\": "tests/"
        }
    },

    "scripts": {

        "build": [

            "npm run production"
        ],

        "lint": [

            "./vendor/bin/pint -v"
        ],

        "test": [

            "./vendor/bin/phpunit --testsuite Unit,Integration,Feature,ModuleUnit,ModuleIntegration,ModuleFeature"
        ],

        "e2e": [

            "./vendor/bin/phpunit --testsuite E2E,ModuleE2E"
        ],

        "start": [

            "nohup bash -c 'npm run development & php artisan octane:start --watch & php artisan queue:work & php artisan schedule:work' > ./storage/logs/run.log 2>&1 &"
        ],

        "stop": [

            "pkill -f 'npm run development' || true",
            "pkill -f 'php artisan octane:start --watch' || true",
            "pkill -f 'php artisan queue:work' || true",
            "pkill -f 'php artisan schedule:work' || true"
        ],

        "post-autoload-dump": [

            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],

        "post-update-cmd": [

            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ]
    },

    "extra": {

        "laravel": {

            "dont-discover": []
        }
    },

    "config": { "preferred-install": "dist", "sort-packages": true, "optimize-autoloader": true, "allow-plugins": { "pestphp/pest-plugin": true, "php-http/discovery": true } }, "minimum-stability": "stable", "prefer-stable": true
}
